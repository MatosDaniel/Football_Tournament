@model TorneioFutebol.Models.Equipa

@{
    ViewData["Title"] = "Edit";
}

<h4>Equipa: @Model.TeamName </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Captain" class="control-label"></label>
                <input asp-for="Captain" class="form-control" />
                <span asp-validation-for="Captain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfMembers" class="control-label"></label>
                <input asp-for="NumberOfMembers" class="form-control" />
                <span asp-validation-for="NumberOfMembers" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info mt-3" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
