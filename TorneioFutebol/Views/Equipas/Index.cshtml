@model IEnumerable<TorneioFutebol.Models.Equipa>

@{
    ViewData["Title"] = "Index";
}

<h1> Lista das Equipas presentes no torneio</h1>
    <br/>
    <a class="btn-primary btn mb-2" asp-action="Create"> Cria a tua equipa!</a>

    <form asp-action="Search">
        <input name="SearchPhrase" placeholder="Team Name" size="25" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
<br/>

<table class="table">
    <thead>
        <tr style="color:white">
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Captain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMembers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
                <tr style="color:white">
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Captain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfMembers)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id"> Edit </a> |
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"> Details </a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                    </td>
                </tr>
             }
        }
        @if(Model.Count() == 0)
        {
                <td style="color:white">
                    <h6> Nenhuma equipa encontrada :( </h6>
                </td>
        }
    </tbody>
</table>